@model StreamTec.Models.Student

@{
ViewData["Title"] = "Home Page";
}

<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex align-items-center justify-content-center">
<div class="container position-relative">
    <h1>Student Streaming System</h1>
    <!-- ======= Login/Registration Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
        <div class="row">     
            <div class="col-lg-6">
            <div class="section-title">
                <h2>Registration</h2>
                <p class="mt-3">Register for System.</p>
            </div>
            <form asp-action="Register" class="php-email-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <input asp-for="StudentId" class="form-control" placeholder="Student ID" required/>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <div class="text-center"><button type="submit">Registration</button></div>
                </div>
            </form>
            </div>
            <div class="col-lg-6">
                        <div class="section-<link href=" ~ /css/timetable.css" rel="stylesheet" />title">
                <h2>Login</h2>
                <p class="mt-3">Login for System.</p>
            </div>
            <form asp-action="Login" method="post" class="php-email-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <input asp-for="StudentId" class="form-control" placeholder="Student ID" required/>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group my-3">
                    <div class="text-center"><button type="submit">Login</button></div>
                </div>
            </form>
            </div>
        </div>
        </div>
    </section><!-- End Login/Registration Section -->
</div>
</section><!-- End Hero -->

@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}

