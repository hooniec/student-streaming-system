@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Error";
}

<!-- ======= Error Section ======= -->
<section class="d-flex align-items-center justify-content-center">
    <div class="container position-relative">
        <div class="d-flex justify-content-center vh-100">
            <div class="text-center">
                <h1 class="display-1 fw-bold">404</h1>
                <p class="fs-3"> <span class="text-danger">Oops!</span> Something went wrong.</p>
                @*<p class="lead">The page you’re looking for doesn’t exist.</p>*@
                @if (@HttpContextAccessor.HttpContext.Session.GetString("_StudentId") != null)
                {
                    <a class="btn btn-primary" asp-area="" asp-controller="Stream" asp-action="Index">Go Timetable</a>
                }
                else {
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Go Home</a>
                }
                
            </div>
        </div>
    </div>
</section><!-- End Error -->